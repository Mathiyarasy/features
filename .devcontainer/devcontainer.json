{
    "image": "ubuntu:focal",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "./features/python": {
            "version": "3.10",
            "installJupyterlab": true,
            "configureJupyterlabAllowOrigin": "*"
        }
    },
    "postCreateCommand": "npm install -g @devcontainers/cli",
    "hostRequirements": {
        "cpus": 4
    },
    "containerUser": "vscode",
    "customizations": {
        "vscode": {
            "extensions": [
                "mads-hartmann.bash-ide-vscode"
            ]
        }
    }
}
